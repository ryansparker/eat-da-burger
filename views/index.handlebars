<h1>Eat Da Burger!</h1>

<h2>Burgers</h2>

<ul>
  {{#each burgers}}
    {{#unless devoured}}
      {{> burger-block}}
    {{/unless}}
  {{/each}}
</ul>

<h2>Devoured!</h2>

<ul>
  {{#each burgers}}
    {{#if devoured}}
       {{> burger-block}}
    {{/if}}
  {{/each}}
</ul>

<h2>Enter the burger you want to eat</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="name">
  </div>

  <button type="submit">Submit</button>
</form>
